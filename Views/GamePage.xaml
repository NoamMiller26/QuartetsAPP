<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quartets.Views.GamePage"
            xmlns:vm="clr-namespace:Quartets.ViewModels"
                 xmlns:views="clr-namespace:Quartets.Views"
Title="GamePage"
x:DataType="vm:GamePageVM"
                BackgroundImageSource="background2.png">
    <VerticalStackLayout>
       
        <Label
        HorizontalOptions="Center"
        Text="{Binding MyName}"
        TextColor="Red" />
        <CollectionView ItemsSource="{Binding Players}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <views:PlayerView Player="{Binding}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Grid x:Name="grdBoard" HorizontalOptions="Center" RowSpacing="3" ColumnSpacing="3"/>
    </VerticalStackLayout>
</ContentPage>