<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quartets.Views.GamePage"
            xmlns:vm="clr-namespace:Quartets.ViewModels"
                 xmlns:views="clr-namespace:Quartets.Views"
Title="GamePage"
x:DataType="vm:GamePageVM"
                BackgroundImageSource="background2.png">
    <StackLayout>
        <Label Text="{Binding CurrentStatus}" TextColor="Black"/>
        <CollectionView ItemsSource="{Binding OtherPlayers}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <views:PlayerView Player="{Binding}" HeightRequest="250" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>



        <views:PlayerView
      Player="{Binding CurrentPlayerVM}"
      HeightRequest="150"/>
        <Button 
    IsEnabled="{Binding IsMyTurn}"
    AbsoluteLayout.LayoutBounds="0.5,0.95,140,45"
    AbsoluteLayout.LayoutFlags="PositionProportional"
    BackgroundColor="DarkBlue"
    Command="{Binding NextTurnCommand}"
    CornerRadius="15"
    Text="Next Turn"
    TextColor="White" />
    </StackLayout>
</ContentPage>