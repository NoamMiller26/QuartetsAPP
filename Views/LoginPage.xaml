<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
   xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:m="clr-namespace:Quartets.Models"
             xmlns:vm="clr-namespace:Quartets.ViewModels"
             x:Class="Quartets.Views.LoginPage"
             x:DataType="vm:LoginPageVM"
    Title="LoginPage"
    BackgroundImageSource="background2.png"
    >
    <VerticalStackLayout 
        Padding="30"
        Spacing="25"
        VerticalOptions="Center">
        <Label 
            FontAttributes="Bold"
            FontSize="60"
            TextColor="Black"
            HorizontalOptions="Center"
            Text="{x:Static m:Strings.Login}" />
        <Label 
            FontAttributes="Bold"             
            FontFamily="MaterialSymbols"            
            FontSize="45"             
            TextColor="DarkCyan"        
            HorizontalOptions="Center"
            Text="{StaticResource IconSecurity}" />
        <Border  
            Padding="10"                 
            Stroke="DarkCyan"                
            StrokeShape="RoundRectangle 15" 
            StrokeThickness="1">
            <Entry 
                  Placeholder="{x:Static m:Strings.UserName}" 
                  Text="{Binding UserName}" 
                  FontSize="18"
                  Margin="5"/>
        </Border>
        <Border               
            Padding="10"                    
            Stroke="DarkCyan"                    
            StrokeShape="RoundRectangle 15"     
            StrokeThickness="1">
            <Grid>

                <Entry 
                   Placeholder="{x:Static m:Strings.Password}" 
                   Text="{Binding Password}" 
                   FontSize="18"
                   IsPassword="{Binding IsPassword}" />
                <Button
                   BackgroundColor="Transparent"
                   BorderWidth="0"
                   Command="{Binding ToggleIsPasswordCommand}"
                   FontFamily="MaterialSymbols"
                   FontSize="24"          
                   Style="{StaticResource IconButtonStyle}"
                   HorizontalOptions="End"
                    Text="{Binding IsPassword, Converter={StaticResource passwordIconConvert}}"
                   TextColor="DarkCyan"/>

            </Grid>
        </Border>

        <Border 
            Padding="10"                         
            Stroke="DarkCyan"                   
            StrokeShape="RoundRectangle 15"         
            StrokeThickness="1">
            <Entry 
                Margin="5"
                FontSize="18"
                Placeholder="{x:Static m:Strings.Email}"
                Text="{Binding Email}" />
        </Border>

        <Button 
            Command="{Binding LoginCommand}" 
            Text="{x:Static m:Strings.Login}"
            CornerRadius="20"
            FontSize="30"
            HeightRequest="60"
            TextColor="White">
            <Button.ImageSource>
                <FontImageSource Glyph="{StaticResource IconLock_open_right}">
                    <FontImageSource.FontFamily>MaterialSymbols</FontImageSource.FontFamily>
                </FontImageSource>
            </Button.ImageSource>
        </Button>
    </VerticalStackLayout>
</ContentPage>